<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/voice_llt_bottom_height1" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/rly_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <!--<CheckBox-->
                       <!--android:id="@+id/btn_start_recognition"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="10dp"-->
                       <!--android:button="@null"-->
                <!--android:background="@drawable/btn_switch_selector"/>-->
            <ImageView android:id="@+id/btn_send_message"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="10dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/ic_message"/>
            
            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:hint="输入"
                android:text="@null"
                android:textSize="18sp"
                android:textColor="@color/text_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignLeft="@id/et_content"
                android:layout_alignRight="@id/et_content"
                android:layout_below="@id/et_content"
                android:background="@color/text_gray" />
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rly_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/btn_voice"
                android:layout_width="@dimen/part_voice_width"
                android:layout_height="@dimen/part_voice_height"
                android:background="@drawable/btn_voice_selector" />

            <Button
                android:id="@+id/btn_text"
                android:layout_width="@dimen/part_voice_width"
                android:layout_height="@dimen/part_voice_height"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_text_press" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>